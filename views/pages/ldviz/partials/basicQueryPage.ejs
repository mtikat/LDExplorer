    <p id="time1"></p>
    <p id="time2"></p>
    <p id="time3"></p>
    <p id="test"></p>
    <p id="res1"></p>
    <p id="res2"></p>
    <p id="res3"></p>

    <div id="viewArea" style="top:auto" class="viewing"></div>
    </p>
</div>